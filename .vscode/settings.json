{
  "eslint.validate": ["javascript", "typescript", "html"],

  "eslint.options": {
    "extensions": [".js", ".ts", "html"]
  },
  "htmlhint.options": {
    "tagname-lowercase": false,
    "attr-lowercase": false,
    "attr-value-double-quotes": true,
    "doctype-first": false
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  }
}
